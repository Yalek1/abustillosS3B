<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="abustillosS3B.Views.Login">
    <VerticalStackLayout
        Spacing="25"
        Padding="25">
        <Label 
            Text="INICIO DE SESION"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!--https://revista.uisrael.edu.ec/images/uisrael.png-->
        <Image Source="ecuador.png"
               WidthRequest="100"/>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario" MaxLength="25"/>

        <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" IsPassword="True"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnIniciar"
                Text="INICIAR SESION"
                Clicked="btnIniciar_Clicked"
                Grid.Row="0"
                Grid.Column="0"/>

            <Button x:Name="btnRegistro"
                Text="REGISTRAR"
                Clicked="btnRegistro_Clicked"
                Grid.Row="0"
                Grid.Column="1"/>
            
        </Grid>

    </VerticalStackLayout>
</ContentPage>